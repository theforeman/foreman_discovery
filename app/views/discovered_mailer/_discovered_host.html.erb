<td class="discovery-mailer-td-style">
  <%= link_to host, discovered_host_path(:id => host, :host => @url.host, :port => @url.port, :only_path => false, :protocol => @url.scheme) %>
</td>
<td class="discovery-mailer-td-style"><%= host.try(:hardware_model_name) || 'N/A' %></td>
<td class="discovery-mailer-td-style"><%= host.ip %></td>
<td class="discovery-mailer-td-style"><%= discovery_attribute(host, :cpu_count) %></td>
<td class="discovery-mailer-td-style"><%= number_to_human_size(discovery_attribute(host, :memory, 0) * 1024 * 1024) %></td>
<td class="discovery-mailer-td-style"><%= discovery_attribute(host, :disk_count) %></td>
<td class="discovery-mailer-td-style"><%= number_to_human_size(discovery_attribute(host, :disks_size, 0) * 1024 * 1024) %></td>
