<div class="row">
  <div class="col-md-12">

    <table class="<%= table_css_classes %>">
      <thead>
        <tr>
          <th><%= _('Name') %></th>
          <th><%= _('Model') %></th>
          <th><%= _('Location') %></th>
          <th><%= _('Organization') %></th>
        </tr>
      </thead>
      <tbody>
        <% hosts.each do |host| -%>
          <tr>
            <td><%=h host %> </td>
            <td><%=h host.model %> </td>
            <td><%=h host.try(:location) %></td>
            <td><%=h host.try(:organization) %></td>
          </tr>
        <% end -%>
      </tbody>
    </table>
  </div>
</div>
